{
  "name": "@api-ciwei/scanner",
  "version": "0.1.0",
  "description": "Core scanning engine for API-CIWEI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "clean": "rm -rf dist"
  },
  "license": "MIT",
  "devDependencies": {
    "@api-ciwei/tsconfig": "workspace:*",
    "@types/node": "^22.10.2",
    "@types/babel__traverse": "^7.20.6",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.4",
    "@babel/types": "^7.26.3",
    "glob": "^11.0.0",
    "micromatch": "^4.0.8"
  }
}
